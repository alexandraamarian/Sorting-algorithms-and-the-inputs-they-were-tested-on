#include <stdio.h>
#include <time.h>

void insertionSortAlg(int size, int inputDataArray[]) {
    int i, aux, j;

    for (i = 1; i < size; i++) {
        aux = inputDataArray[i];
        j = i - 1;

        while (j >= 0 && inputDataArray[j] > aux) {
            inputDataArray[j + 1] = inputDataArray[j];
            j = j - 1;
        }

        inputDataArray[j + 1] = aux;
    }
}

void printArray(int size, int array[]) {
    for (int i = 0; i < size; i++)
        printf("%d ", array[i]);
    printf("\n");
}

int isSorted(int size, int array[]) {
    for (int i = 0; i < size - 1; i++) {
        if (array[i] > array[i + 1])
            return 0; // Not sorted
    }
    return 1; // Sorted
}

int main() {
    clock_t begin = clock();
    int i = 0;
    static int a[1000000];
    FILE *fptr;
    fptr = fopen("D:\\C\\c programms\\Almost sorted input (1.000.000 elements).txt", "r");
    while (fscanf(fptr, "%d", &a[i]) == 1) {
        i++;
    }
    insertionSortAlg(i, a);
    fclose(fptr);

    clock_t end = clock();
    double time_spent = (double)(end - begin) / CLOCKS_PER_SEC;

    printArray(i, a);

    if (isSorted(i, a))
        printf("Sorted\n");
    else
        printf("Not sorted\n");

    printf("Total time spent = %f sec\n", time_spent);
    return 0;
}
